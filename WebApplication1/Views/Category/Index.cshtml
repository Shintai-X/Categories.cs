
@model IEnumerable<Categorie>
@{
    ViewData["Title"] = "Index";
}

<h1>Index Categorie</h1>
<div class="float-end">
    <a class="btn btn-primary" asp-area="" asp-controller="Category" asp-action="Formulaire">
        <input type="button" class="btn btn-primary" value="Add categorie"/>
      </a>
   
</div>
<table class="table table-bordered table-striped" style="width:100%">

    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model){
            <tr>
                <td width="50%">
                    @obj.categorie_name
                </td>
                <td width="50%">
                    @obj.DisplayOrder
                </td>
            </tr>
        }
    </tbody>
</table>


